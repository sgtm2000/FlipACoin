<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
            android:id="@+id/coinflipButton"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:text="Head or Tail?"
            android:onClick="flipCoin" />

    <ImageView
            android:id="@+id/headPic"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_weight="1.00"
            android:src="@drawable/head"
            android:layout_below="@+id/coinflipButton"
            android:visibility="invisible"/>
    <ImageView
            android:id="@+id/tailPic"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_weight="1.00"
            android:src="@drawable/tail_final"
            android:layout_below="@+id/coinflipButton"
            android:layout_alignLeft="@+id/headPic"
            android:layout_alignBottom="@+id/headPic"
            android:layout_alignRight="@+id/coinflipButton"
            android:visibility="invisible"/>
    <Button
            android:id="@+id/clearButton"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:text="Clear"
            android:onClick="clear"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/coinflipButton"
            android:visibility="invisible"/>

</RelativeLayout>
